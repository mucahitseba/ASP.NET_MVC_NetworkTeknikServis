@using NetworkTeknikServis.BLL.Identity
@model List<NetworkTeknikServis.MODELS.ViewModels.FaultViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<br/>
<br/>
<br/>

@section top
{

    <!-- Page JS Plugins CSS -->
    <link rel="stylesheet" href="~/assets/js/plugins/datatables/jquery.dataTables.min.css" />
}

    <div class="row">
        <div class="card">
            <div class="card-header">
                
            </div>
            <div class="card-block">
                <!-- DataTables init on table by adding .js-dataTable-full class, functionality initialized in js/pages/base_tables_datatables.js -->
                <table class="table table-bordered table-striped table-vcenter dataTable">
                    <thead>
                        <tr>
                            <th class="text-center">#</th>
                            <th>Avatar</th>
                            <th>Kullanıcı Adı</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Eklendigi Tarih</th>
                            <th>Adres</th>
                            <th class="text-center" style="width: 10%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {

                            var data = MembershipTools.GetMusteri(Model[i].CustomerId);
                            var data2 = Model[i];
                            @*<tr class="@(data.EmailConfirmed?"":"bg-yellow")">*@
                            <tr class="bg-danger">
                                <td class="text-center">@(i + 1)</td>
                                <td class="text-center">
                                    <img src="@(string.IsNullOrEmpty(data.AvatarPath)?"/assets/img/avatars/avatar3.jpg":data.AvatarPath)" class="img-avatar-96" width="100" height="100" />
                                </td>
                                <td class="font-500">@data.UserName</td>
                                <td>@data.Name</td>
                                <td>@data.Surname</td>
                                <td>@data2.FaultNotifyDate</td>
                                <td>@data2.Adress</td>


                                <td class="text-center">
                                    <div class="btn-group">
                                        <button class="btn btn-xs btn-default btnsendcode" name="@data.Id" type="button" title="Send Activation Code">
                                            <i class="ion-android-mail"></i>
                                        </button>
                                        <button class="btn btn-xs btn-default btnsendpassword" name="@data.Id" type="button" title="Send Password">
                                            <i class="ion-key"></i>
                                        </button>
                                        <a href="@Url.Action("EditUser", "Admin", new {id = data.Id})" class="btn btn-xs btn-default" title="Edit User">
                                            <i class="ion-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- .card-block -->
        </div>
    </div>


@section bottom
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/jq-3.3.1/dt-1.10.18/af-2.3.2/b-1.5.4/b-colvis-1.5.4/b-flash-1.5.4/b-html5-1.5.4/b-print-1.5.4/cr-1.5.0/r-2.2.2/sc-1.5.0/datatables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.5.2/css/buttons.dataTables.min.css" />
    <script src="~/assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>

    

    <script>
        $(function() {
            $(".dataTable").DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>

}

